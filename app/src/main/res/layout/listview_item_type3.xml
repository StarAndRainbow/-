<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:gravity="center"
    android:background="@drawable/top_listview_item"
    >

    <TextView
        android:id="@+id/title_type2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="男子蛇吻取毫不知情男子蛇吻取毫不知情男子蛇吻取毫不知情"
        android:textSize="15sp"
        android:textColor="#000000"
        />
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imag1_type2"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/test"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img2_type2"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/test"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img3_type2"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/test"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >

    <TextView
        android:id="@+id/time_type2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="2017/12/0"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/author_name_type2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="作者名字"
       android:layout_marginRight="10dp"
       android:textSize="10sp"
    />

    </LinearLayout>
</LinearLayout>
