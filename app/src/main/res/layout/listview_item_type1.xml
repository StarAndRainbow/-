<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/top_listview_item"
    >

    <ImageView
        android:id="@+id/img_type1"
        android:layout_margin="5dp"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:src="@drawable/test3"
        android:scaleType="fitCenter"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="72dp"
         android:orientation="vertical"
         android:paddingTop="5dp"
         >
         <TextView
             android:id="@+id/title_type1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:text="男子蛇吻却毫不知情男子蛇吻却毫不知情"
             android:textColor="#000000"
             android:textSize="15sp"
             />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginBottom="2dp"
             >

             <TextView
                 android:id="@+id/time_type1"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:text="2017/1/2"
                 android:textSize="10sp"
                 />

             <TextView
                 android:id="@+id/author_name_type1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="作者名称"
                 android:textSize="10sp"
                 android:layout_marginRight="10dp"
                 />
         </LinearLayout>

     </LinearLayout>
</LinearLayout>
